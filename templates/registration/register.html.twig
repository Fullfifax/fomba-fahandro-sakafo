{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block authenticate %}
    <div class="row mx-auto">
        <div class="col-md-4 mx-auto text-primary">
            <h2 class="mt-3 text-primary text-center">Hisoratra anarana</h2>
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.name, {
                    label: 'Anarana'
                }) }}
                {{ form_row(registrationForm.firstname, {
                    label: 'Anarana fanampiny'
                }) }}
                {{ form_row(registrationForm.numberPhone, {
                    label: 'Laharam-pifandraisana'
                }) }}
                {{ form_row(registrationForm.about, {
                    label: 'Mombamomba anao fohy'
                }) }}
                {{ form_row(registrationForm.facebook, {
                    label: 'Rohy ny kaonty facebook'
                }) }}
                {{ form_row(registrationForm.email, {
                    label: 'Email'
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Hafatra miafina'
                }) }}
                <button type="submit" class="btn btn-primary my-4 w-100">Register</button>
            {{ form_end(registrationForm) }}
        </div>
        <a href="{{ path('app_login') }}" class="mb-4 text-center">
            Efa manana kaonty ? Midira eto :)
        </a>
    </div>
{% endblock %}
